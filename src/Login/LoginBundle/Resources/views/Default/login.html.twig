{% extends '::base.html.twig' %}
{% block title%}
Please Login First
{% endblock %}
{% block body %}
<div class="container">

    <div class="row clearfix">
        <div class="col-md-4 column">
        </div>
        <div class="col-md-4 column">
            {%if msg is defined%}
            <div class="alert-danger fade in">
        {{msg}}
            </div>
    {%endif%}
            
            <div class="row clearfix">
                <div class="col-md-12 column">
                    
                    <form role="form" method="POST" action="{{path('login_page')}}">
                        <div class="form-group">
                            <label for="username">User Name</label><input type="text" name ="username" class="form-control" id="username" />
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label><input type="password" name="password" class="form-control" id="password" />
                        </div>
                        <button type="submit" class="btn btn-default">Submit</button>
                    </form>
                    
                    
                   
                    
                </div>
            </div>
        </div>
        <div class="col-md-4 column">
        </div>
    </div>
</div>
{% endblock %}